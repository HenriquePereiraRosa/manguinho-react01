{
  "name": "manguinho-react01",
  "version": "1.0.0",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "author": "Henrique P Rosa",
  "license": "UNLICENCED",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "test": "jest --coverage",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc -p tsconfig-prod.json",
    "start": "npm run build && node dist/main/api"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.1.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.14.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
