{
  "compilerOptions": {
    "incremental": true,
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": [
      "src"
    ],
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/tests/*": [
        "../tests/*"
      ]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true, // group all other sctrict rules in one rule
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests"
  ]
}